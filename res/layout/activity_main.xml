<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/studyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/study"
        android:onClick="startStudy"
        android:height="225dp"
        android:width="160dp" />

    <Button
        android:id="@+id/statisticsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/studyButton"
        android:text="@string/statistics"
        android:onClick="startStats"
        android:height="225dp"
        android:width="160dp" />

    <Button
        android:id="@+id/manageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/studyButton"
        android:text="@string/manage"
        android:onClick="startManager"
        android:height="225dp"
        android:width="160dp" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/manageButton"
        android:layout_below="@+id/manageButton"
        android:text="@string/settings"
        android:onClick="startSettings"
        android:height="225dp"
        android:width="160dp" />

</RelativeLayout>