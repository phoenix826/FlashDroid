<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/timer_length"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:context=".SettingsActivity" />

    <ImageButton
        android:id="@+id/upButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:minHeight="20dip"
        android:minWidth="20dip"
        android:src="@drawable/ic_up_arrow" />

    <ImageButton
        android:id="@+id/downButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upButton02"
        android:layout_below="@+id/upButton02"
        android:background="#ffffff"
        android:minHeight="20dip"
        android:minWidth="20dip"
        android:src="@drawable/ic_down_arrow" />

    <TextView
        android:id="@+id/countdown2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/downButton02"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/upButton02"
        android:text="0"
        android:textColor="#333"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/randomColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/downButton02"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="69dp"
        android:text="@string/random_background_color"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:context=".SettingsActivity" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/randomColorLabel"
        android:layout_alignTop="@+id/randomColorLabel"
        android:layout_toRightOf="@+id/textView1"
        android:minHeight="25dip"
        android:minWidth="25dip"
        android:shadowColor="#000000"
        android:shadowDx="-12"
        android:shadowDy="-12"
        android:shadowRadius="5" />
    
    <Button
        android:id="@+id/settingsDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/done"
        android:onClick="saveCard" />

</RelativeLayout>
