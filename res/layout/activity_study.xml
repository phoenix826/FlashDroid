<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="77dp"
        android:layout_toRightOf="@+id/termText"
        android:background="#00000000"
        android:contentDescription="@string/next"
        android:height="36px"
        android:src="@drawable/ic_next_card"
        android:width="36px" />

    <ImageButton
        android:id="@+id/flipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nextButton"
        android:layout_toLeftOf="@+id/termText"
        android:background="#00000000"
        android:contentDescription="@string/flip"
        android:height="36px"
        android:src="@drawable/ic_flip"
        android:width="36px" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/termText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:src="@drawable/ic_clock" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/termText"
        android:text="@string/defaultTime"
        android:textColor="#333"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/index_card_front" />

    <TextView
        android:id="@+id/termText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/term"
        android:textSize="35dp"
        tools:context=".StudyActivity" />

    <TextView
        android:id="@+id/timeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/nextButton"
        android:layout_marginTop="14dp"
        android:text="@string/timeRemaining"
        android:textColor="#333"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/nextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flipButton"
        android:layout_toRightOf="@+id/termText"
        android:text="@string/next"
        android:textColor="#333"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/flipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nextText"
        android:layout_alignBottom="@+id/nextText"
        android:layout_toLeftOf="@+id/termText"
        android:text="@string/flip"
        android:textColor="#333"
        android:textSize="20dp" />

</RelativeLayout>